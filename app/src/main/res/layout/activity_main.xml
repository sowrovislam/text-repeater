<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#BEC9CA"
    tools:context=".MainActivity">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:background="#AB2196F3">





    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="@dimen/_8ssp"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_38ssp"
            android:layout_marginStart="@dimen/_9ssp"
            android:src="@drawable/image1"/>


        <ImageView
            android:layout_width="@dimen/_30ssp"
            android:layout_height="@dimen/_38ssp"
            android:src="@drawable/image2"
            android:layout_alignParentEnd="true"
            android:layout_marginEnd="@dimen/_10ssp"

            />




    </RelativeLayout>



    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_margin="20dp"


        >

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Aa  Enter Text"
            android:textSize="@dimen/_12ssp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_8ssp"/>



        <EditText
            android:id="@+id/edtext"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Input type your text"

            android:background="@drawable/edtex"
           android:textStyle="bold"
            android:textColor="#913939"
            android:inputType="text"
            android:textSize="@dimen/_16ssp"/>


        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Repetition"
            android:textSize="@dimen/_8ssp"
            android:layout_marginTop="@dimen/_7ssp"
            android:textColor="@color/white"
            android:layout_marginStart="@dimen/_10ssp"/>



        <EditText
            android:id="@+id/edlimit"
            android:layout_width="120sp"
            android:layout_height="wrap_content"
            android:hint="0--1000 "
            android:background="@drawable/edtex"
            android:textStyle="bold"
            android:textColor="#913939"
            android:inputType="number"
            android:textSize="@dimen/_16ssp"/>


    </LinearLayout>


<Button
    android:id="@+id/button"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:text="Click Hare"
    android:background="@drawable/edtex"
    android:layout_marginBottom="8sp"
    android:layout_marginHorizontal="@dimen/_100ssp"




    />



    </LinearLayout>

<LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:layout_marginStart="@dimen/_50ssp"
    android:layout_marginTop="@dimen/_7ssp"

    >


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/aclonica"
        android:paddingStart="@dimen/_20ssp"
        android:paddingEnd="@dimen/_29ssp"
        android:text="Thanks you sire.. "
        android:textColor="@color/black"
        android:textSize="@dimen/_16ssp"
        android:textStyle="bold" />



    <ImageView
        android:id="@+id/copy"
        android:layout_width="@dimen/_30ssp"
        android:layout_height="@dimen/_38ssp"
        android:src="@drawable/copy"



        />








</LinearLayout>


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="370dp"
        android:layout_marginStart="@dimen/_5ssp"
        android:layout_marginTop="@dimen/_10ssp"
        android:layout_marginEnd="@dimen/_5ssp"
        android:background="@drawable/edtex"
        app:cardCornerRadius="@dimen/_18ssp">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"

            android:orientation="vertical">


            <ScrollView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                >


                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/_18ssp"
                    android:orientation="vertical">


                    <TextView
                        android:id="@+id/tvtext"

                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/almendra_display"
                        android:paddingStart="@dimen/_20ssp"
                        android:paddingEnd="@dimen/_29ssp"
                        android:text="I love you "
                        android:textColor="@color/black"
                        android:textSize="@dimen/_30ssp"
                        android:textStyle="bold" />


                </LinearLayout>


            </ScrollView>


        </LinearLayout>


    </androidx.cardview.widget.CardView>


</LinearLayout>



